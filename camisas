#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;
 void main()
 {
	 int numcamisas;
 float Preciototal, totalapagardcto;
 //Validar la entrada
 do {
	 cout<<"Ingresar numero de camisas: ";
	 cin>>numcamisas;
 } while (numcamisas<0);    // !(numcamisas>=0)
 do {
	 cout<<"Ingresar el precio de las camisas: ";
	 cin>>Preciototal;
 } while (Preciototal <=0);
 //Determinar el descuento
 if (numcamisas<=5)
	 totalapagardcto=numcamisas*Preciototal*0.7;
 else 
	 totalapagardcto=numcamisas*Preciototal*0.8;
 cout<<"El total a pagar con descuento es: "<<totalapagardcto;
 getch ();



}
