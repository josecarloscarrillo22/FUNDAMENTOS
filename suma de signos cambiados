#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
int suma (int a);

void main() {
	int n, sum;
	cout<<"ingresar la cantidad N: ";
	cin>>n;
	sum = suma(n);
	cout<<"el resultado es: "<<sum<<endl;
getch();
}

int suma (int a) {
	int i = 1, sum = 0;
	while (i <= a) {
	if(i%2 == 0){ 
	sum = sum +(i*-1);
	} else {
	sum = sum + i;
	}
	i++;		
	}
return sum;
}
