#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;


int nombre (int vec[], int x);

void main () {
int vec[6], x;

	for(int i = 0; i < 5; i++){
		cout<<"Ingrese valor de "<<i<<": ";
		cin>>vec[i];
	}

cout<<"Ingrese el valor de X: ";
cin>>x;
cout<<nombre(vec, x);
getch();
}

int nombre (int vec[], int x) {
int pos;
	for(int i = 0; i < 5; i++){
		if (x == vec[i]){
			pos = i;
			cout<<pos;
		}
	}
return pos;
}
